<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/activity_horizontal_margin"
                  android:orientation="horizontal"
                  android:weightSum="3">
    <ImageView
              android:id="@+id/image_wishlist" android:layout_width="0dp"
               android:layout_height="80dp"
               android:layout_weight="1"
               android:src="@drawable/hotel_dining_table_250x250"
               android:adjustViewBounds="true"
               android:layout_gravity="center_vertical"
        />
        <LinearLayout  android:id="@+id/layout_item_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.8"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">
            <TextView android:id="@+id/txtHotelName"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text=""
                      android:textSize="12dp"
                      android:textStyle="bold"/>
            <TextView
                      android:id="@+id/totalTable"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text=""
                      android:textColor="@color/green"
                      android:textSize="10dp"/>
            <TextView
                      android:id="@+id/tableCapacity"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text=""
                      android:textSize="10dp"
                      android:textColor="#FF0000"/>
                      <!--android:textColor="#4CAF50"-->
        </LinearLayout>
        <ImageView android:id="@+id/ic_wishlist"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.2"
                   android:layout_gravity="center_horizontal"
                   android:visibility="gone"
                   android:src="@drawable/ic_delete_black_24dp"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="@dimen/view_width_xsmall"
          android:background="@color/grey_light"/>
</LinearLayout>

